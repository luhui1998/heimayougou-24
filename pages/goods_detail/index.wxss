.commenter {
  width: 750rpx;
}

.page-section image {
  width: 100%;
  height: 721rpx;
}

.page-section swiper {
  width: 100%;
  height: 721rpx;
}

.page-section-spacing .page-section {
  height: 100%;
  width: 540rpx;
}

.page-section-spacing {
  width: 100%;
  height: 300rpx;
  border-right: 1px solid #ccc;
  display: flex;
  border-bottom: 10px solid #f4f4f4;
  padding-left: 17rpx;
}

.page-section-spacing .page-section view {
  height: 33.3%;
  display: flex;
  align-items: center;
}

.page-section view:nth-child(1) {
  font-weight: 700;
  color: red;
}

.page-section view:nth-child(3) {
  color: #ccc;
}

.page-spacing {
  height: 100%;
  position: relative;
}

.page-spacing view {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 78rpx;
  width: 144rpx;
  border-left: 1px solid #ccc;
  position: absolute;
  left: 70rpx;
  top: 121rpx;
}

.page-section-bottom {
  height: 166rpx;
  width: 100%;
  display: flex;
}



.page-section-bottom view + view {
  width: 326rpx;
  flex: 1;
  display: flex;
  position: relative;
}

.page-section-bottom view:nth-child(2) .left {
  display: flex;
  width: 213rpx;
  height: 98rpx;
  background-color: #eb4450;
  position: absolute;
  bottom: 0;
  right: 0;
  color: white;
  justify-content: center;
  align-items: center;
}

.page-section-bottom view:nth-child(2) .right {
  width: 213rpx;
  height: 98rpx;
  background-color: #f4b73f;
  position: absolute;
  bottom: 0;
  color: white;
  justify-content: center;
  align-items: center;
}
.page-section-bottom view:nth-child(1) {
  width: 317rpx;
  height: 100%;
  padding-left: 17rpx;
}
.page-section-bottom view:nth-child(1) .top{
  line-height: 83rpx;
  width: 100%;
  height: 83rpx;
  background-color: bluesky;
}
.page-section-bottom view:nth-child(1) .top text+text{
  color: red;
  padding-left: 43rpx;
}