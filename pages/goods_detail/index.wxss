.commenter {
  width: 750rpx;
  padding-bottom: 100px;
}

.page-section image {
  width: 100%;
  height: 721rpx;
}

.page-section swiper {
  width: 100%;
  height: 721rpx;
}

.page-section-spacing .page-section {
  height: 100%;
  width: 540rpx;
}
.page-section view:nth-child(2) text{
  display: -webkit-box;
-webkit-box-orient: vertical;
-webkit-line-clamp: 2;
overflow: hidden;
}

.page-section-spacing {
  width: 100%;
  height: 300rpx;
  border-right: 1px solid #ccc;
  display: flex;
  border-bottom: 10px solid #f4f4f4;
  padding-left: 17rpx;
}

.page-section-spacing .page-section view {
  height: 33.3%;
  display: flex;
  align-items: center;
}

.page-section view:nth-child(1) {
  font-weight: 700;
  color: red;
}

.page-section view:nth-child(3) {
  color: #ccc;
}

.page-spacing {
  height: 100%;
  position: relative;
}

.page-spacing view {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 78rpx;
  width: 144rpx;
  border-left: 1px solid #ccc;
  position: absolute;
  left: 70rpx;
  top: 121rpx;
}
.btns{
  display: flex;
  justify-content: space-between;
  position: fixed;
  bottom: 0;
  width: 100%;
  box-shadow: 0 -2px 2px #eee;
  background: #fff;
}
.btns > view{
  height: 100rpx;
}
.btn-white{
  width: 20%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 12px;
}
.btn-white-button{
  width: 20%;
  position: absolute;
  overflow: hidden;
  opacity: 0;
}
.btn-color{
  width: 30%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  background: orange;
}

.btn-color:last-child{
  background-color: red;
}
.tab{
  display: flex;
}
.tab-item{
  width:50%;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
}
.active{
  background-color: red;
  color: #fff;
}

