.comtainer {
  position: relative;
  min-height: 100vh;
  margin-bottom: 150rpx;
}
.list-top {
  display: flex;
  justify-content: space-between;
  margin: 20px;
}

.list-info {
  margin: 0 0 20px 20px;
}

.list-top .list-one {
  display: flex;
  align-items: center;
}

.list-top .right-icon {
  width: 8px;
  height: 8px;
  border-top: 1px solid #ccc;
  border-right: 1px solid #ccc;
  transform: rotate(45deg);
  margin-left: 10px;
}

.list-images image {
  width: 750rpx;
  height: 15rpx;
  border-bottom: 20rpx solid #f4f4f4;
  display: block;
}

.Life-hall {
  display: flex;
  align-items: center;
  height: 87rpx;
  width: 100%;
  border-bottom: 1px solid #ddd;
}

.Life-hall view:nth-child(1) {
  margin-left: 33rpx;
}

.Life-hall view:nth-child(2) {
  margin-left: 25rpx;
}

.list-details {
  height: 205rpx;
  width: 100%;
  display: flex;
}

.list-details .list-details-one {
  width: 88rpx;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.list-details .details-page {
  display: flex;
  height: 100%;
  flex: 1;
  border-top: 1px solid #ddd;
}

.details-page-top {
  width: 182rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.details-page-top image {
  width: 161rpx;
  height: 161rpx;
}

.details-page-text {
  width: 100%;
  margin: 20rpx;
  position: relative;
}

.details-page-text-over text {
  position: absolute;
  left: 0;
  bottom: 0;
}

.details-page-text-button view:nth-child(1),
.details-page-text-button view:nth-child(3) {
  border: 4px solid #ccc;
}

.details-page-text-button view {
  width: 52rpx;
  height: 42rpx;
}

.details-page-text-button {
  display: flex;
  text-align: center;
  align-items: center;
  position: absolute;
  bottom: 0;
  right: 0;
}

.tijiao {
  width: 100%;
  height: 88rpx;
  border-top: 60rpx solid #f4f4f4;
  position: fixed;
  bottom: 0;
  display: flex;
  background-color: #ddd;
}

.tijiao .list-details-one {
  width: 88rpx;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.tijiao-xiaode {
  display: flex;
  align-items: center;
  width: 182rpx;
}

.jiesuan {
  flex: 1;
  height: 100%;
  background-color: #eb4450;
  color: white;
  text-align: center;
  line-height: 97rpx;
}

.tijiao-xiaode-list {
  display: flex;
  width: 280rpx;
  flex-direction: column;
}

.details-page-text-one {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.details-page-text-button input{
  width: 60rpx;
}
